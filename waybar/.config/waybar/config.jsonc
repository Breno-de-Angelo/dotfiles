    "tooltip-format": "Current VPN: {}",

    // Clique esquerdo ‚Üí toggle conectar/desconectar
    "on-click": "~/.config/waybar/scripts/vpn_toggle.sh",

    // Clique direito ‚Üí menu de escolha
    "on-right-click": "~/.config/waybar/scripts/vpn_menu.sh"
  }
}
